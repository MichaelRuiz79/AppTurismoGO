<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <!-- Declare binding variables here if needed -->
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="5dp">

        <!--Icono de la categoría-->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/categoriaIconoIv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:shapeAppearance="@style/ImageStyle_Circle"
            android:background="#58D68D"
            android:src="@drawable/ic_categoria"
            app:contentPadding="10dp"/>

        <!--Título de la categoría-->
        <TextView
            android:id="@+id/Tv_categoria"
            android:text="@string/Tv_categoria"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:textSize="10sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>
